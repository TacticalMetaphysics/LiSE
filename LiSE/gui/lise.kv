#: kivy 1.8

#: import lisepathl LiSE.__path__
#: import solarized LiSE.gui.style.solarized
#: import _ LiSE.util.passthru
#: import sep os.sep


<TabbedPanel>:
    do_default_tab: False
<CueCard>:
    Label:
        id: l
        text_size: root.size
        color: solarized["base0"]
        pos: root.pos
        size: root.size
        halign: 'center'
        valign: 'middle'
        canvas.before:
            Color:
                rgba: solarized["base02"]
            Rectangle:
                pos: l.pos
                size: l.size
<SwatchBox>:
    orientation: 'vertical'
<TogSwatch,FrobSwatch>:
    text_size: (self.width, self.height * 0.9)
    halign: 'center'
    multiline: True
    size_hint: (None, None)
<Arrow>:
    canvas:
        Color:
            rgba: root.bg_color
        Line:
            width: root.w * 1.4
            points: root.points
        Color:
            rgba: root.fg_color
        Line:
            width: root.w
            points: root.points